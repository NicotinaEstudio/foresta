<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.nicotinaestudio.forestamovil.ui.TransportistasRegistroActivity" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="12dp" 
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img_ic_usuario"
                    android:layout_width="fill_parent"
                    android:layout_height="145dp"   
                    android:onClick="capturarFoto"                 
                    android:src="@drawable/ico_camara" 
                    
                    />

                <EditText
                    android:id="@+id/et_nombre"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Nombre" />

                <EditText
                    android:id="@+id/et_paterno"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Ap. Paterno" />

                <EditText
                    android:id="@+id/et_materno"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Ap. Materno" >
                </EditText>

                <EditText
                    android:id="@+id/et_licencia"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Licencia" />

                <EditText
                    android:id="@+id/et_estado"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Estado" />

                <EditText
                    android:id="@+id/et_municipio"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Municipio" />

                <EditText
                    android:id="@+id/et_cp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="CP" />

                <EditText
                    android:id="@+id/et_calle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Calle" />

                <EditText
                    android:id="@+id/et_numero"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="NumÃ©ro" />

                <EditText
                    android:id="@+id/et_colonia"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Colonia" />
                
                <Button 
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:onClick="btnGuardar_Click"
                    style="@style/ButtonText"
                    android:text="Registrar"
                    />
                
               <ProgressBar
		           android:id="@+id/progressBar1"
		           style="?android:attr/progressBarStyleHorizontal"
		           android:layout_width="match_parent"            
		           android:layout_height="8dp" />
                
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/navDrawerHome"
        
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#fafafa"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:orientation="vertical" >
        
        <include layout="@layout/include_main_drawer_layour" />
        
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>